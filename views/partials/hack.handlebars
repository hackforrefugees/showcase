<div class="grid__item one-third lap--one-half palm--one-whole">
  <article class="hack">
    {{#with repository}}
    <div class='img-circle' style="background-image: url('{{ thumbnailOrDefault ../thumbnail }}')" alt="{{name}}"></div>
    <h2>{{#if name}}{{unSlugify name}}{{else}}No name{{/if}}</h2>
    <p class="desc">
    {{~#if description ~}}
      {{description}}
    {{~else~}}
      <span class="no-content">No description yet</span>
    {{~/if~}}
    </p>
    {{/with}}
  </article>
</div>
